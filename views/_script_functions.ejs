        // get the campus from localstorage
        if (localStorage.getItem(`${selected.name}`)) {
                selected.options[localStorage.getItem(selected.name)].selected = true;
                localStorage.clear();
        }
        
        function loadOnePart() {
            // localStorage.setItem('searchField', searchField.value);

            jQuery('#toload').load(`/filter/search/${searchField.value.replace(" ","_") + "+" + selected.value.replace(" ","_")}`);
        }
        
    </script>